{
    // =========================================================================
    // Main Window
    // =========================================================================

    // Window settings for bug.n
    "window.titleBarStyle": "native",
    "window.menuBarVisibility": "toggle",

    // Saving Settings
    "files.autoSave": "off",
    "files.trimTrailingWhitespace": true,
    "editor.trimAutoWhitespace": true,
    "files.insertFinalNewline": true,

    // Other
    "workbench.commandPalette.preserveInput": true,


    // =========================================================================
    // Editor
    // =========================================================================

    // Visual changes
    "workbench.colorTheme": "One Dark Pro",
    "editor.fontFamily": "'MesloLGS NF', Consolas, 'Courier New', monospace",
    "editor.fontSize": 18,
    "editor.rulers": [
        80,
        100
    ],
    "breadcrumbs.enabled": false,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.renderIndentGuides": false,

    // Functional changes
    "editor.acceptSuggestionOnEnter": "off",
    "editor.multiCursorModifier": "ctrlCmd",


    // =========================================================================
    // Activity Bar/Sidebar
    // =========================================================================

    // Visual changes
    "workbench.activityBar.visible": false,

    // Explorer keyboard navigation
    "workbench.list.automaticKeyboardNavigation": false,
    "workbench.list.keyboardNavigation": "filter",

    // Functional changes
    "explorer.confirmDragAndDrop": false,


    // =========================================================================
    // Panel
    // =========================================================================
    "terminal.integrated.fontSize": 15,


    // =========================================================================
    // Terminal
    // =========================================================================
    "terminal.integrated.shellArgs.linux": ["-l"],

    // Colors
    "workbench.colorCustomizations": {
        "terminal.ansiBlack": "#282c34",
        "terminal.ansiBlue": "#61afef",
        "terminal.ansiCyan": "#56b6c2",
        "terminal.ansiGreen": "#98c379",
        "terminal.ansiMagenta": "#c678dd",
        "terminal.ansiRed": "#e06c75",
        "terminal.ansiWhite": "#abb2bf",
        "terminal.ansiYellow": "#e5c07b",
        "terminal.ansiBrightBlack": "#454c59",
        "terminal.ansiBrightBlue": "#69bbff",
        "terminal.ansiBrightCyan": "#66d9e8",
        "terminal.ansiBrightGreen": "#b5e890",
        "terminal.ansiBrightMagenta": "#e48aff",
        "terminal.ansiBrightRed": "#ff7a85",
        "terminal.ansiBrightWhite": "#cfd7e6",
        "terminal.ansiBrightYellow": "#ffd68a",
    },


    // =========================================================================
    // Extensions
    // =========================================================================

    // Macros
    "macros": {
        // Sidebar macros
        "showAndFocusSidebar": [
            "workbench.action.toggleSidebarVisibility",
            "workbench.action.focusSideBar",
        ],
    },

    // Render Line Endings
    "code-eol.newlineCharacter": "¬",
    "code-eol.returnCharacter" : "¤",
    "code-eol.crlfCharacter"   : "¤¬",
}
